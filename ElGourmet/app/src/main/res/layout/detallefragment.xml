<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".detallefragment">


    <ImageView
        android:id="@+id/detalleImagen"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@drawable/test"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/detalleTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detalleImagen"
        android:layout_marginLeft="16dp"
        android:textSize="24dp"
        android:text="Albondigas con Salsa"
        android:textColor="@android:color/black"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="184dp"
        android:textColor="@android:color/white"
        android:text="Ingredientes"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/detalleIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="220dp"
        android:textColor="@android:color/white"
        android:text=""
        android:layout_marginRight="16dp"
        android:textSize="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="270dp"
        android:textColor="@android:color/white"
        android:text="Elaboración"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/detalleElaboracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:textColor="@android:color/white"
        android:text="Elaboración de la receta"
        android:layout_marginRight="16dp"
        android:textSize="12dp" />

    <Button
        android:id="@+id/detalleBoton"
        android:text="Comentarios"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/boton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>

</ScrollView>