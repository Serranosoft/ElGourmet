<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manue.elgourmet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chef2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chef2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DetailsActivity"
            android:icon="@mipmap/chef2"
            android:label="Receta"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AgregarActivity"
            android:label="Agregar Receta"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.InsertarComentarioActivity"
            android:label="Comentarios"
            android:parentActivityName=".activities.MainActivity" />
    </application>

</manifest>