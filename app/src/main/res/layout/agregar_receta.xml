<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AgregarActivity"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Titulo"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/agregarTitulo"
            android:hint=""
            android:textColor="@android:color/white"
            android:inputType="textCapWords"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Ingredientes"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/agregarIngredientes"
            android:hint=""
            android:textColor="@android:color/white"
            android:inputType="textCapWords"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Elaboracion"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/agregarElaboracion"
            android:hint=""
            android:textColor="@android:color/white"
            android:inputType="textCapWords"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="8dp"
            android:gravity=""/>

        <Button
            android:id="@+id/detalleBoton"
            android:text="Agregar Receta"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/boton"
            android:layout_marginTop="64dp"
            android:layout_gravity="center"
            />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>